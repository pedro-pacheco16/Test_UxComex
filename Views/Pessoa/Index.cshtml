@model IEnumerable<Pessoa>
@{
    Layout = "_Layout";
}

<h2>Pessoas</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">+ Cadastro</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>CPF</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pessoa in Model)
        {
            <tr>
                <td>@pessoa.Nome</td>
                <td>@pessoa.Telefone</td>
                <td>@pessoa.CPF</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = pessoa.PessoaId })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = pessoa.PessoaId })" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
